<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DiffusionNexus.UI.ViewModels"
        xmlns:converters="using:DiffusionNexus.UI.Converters"
        xmlns:controls="using:DiffusionNexus.UI.Views.Controls"
        x:Class="DiffusionNexus.UI.Views.Dialogs.ImageViewerDialog"
        x:DataType="vm:ImageViewerViewModel"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="Full"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Background="#000000">

  <Window.Resources>
    <converters:PathToBitmapConverter x:Key="PathToBitmapConverter"/>
  </Window.Resources>

  <Design.DataContext>
    <vm:ImageViewerViewModel/>
  </Design.DataContext>

  <!-- Full-screen overlay with image viewer -->
  <Grid>
    
    <!-- Dark background -->
    <Border Background="#000000"/>
    
    <!-- Main content area -->
    <Grid RowDefinitions="Auto,*,Auto" Margin="0">
      
      <!-- Top toolbar with filename and close button -->
      <Border Grid.Row="0"
              Background="#CC1A1A1A"
              Padding="16,12">
        <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto">
          
          <!-- Filename and position -->
          <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
            <TextBlock Text="{Binding FileName}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            <Border Background="#444"
                    CornerRadius="4"
                    Padding="8,4">
              <TextBlock Text="{Binding PositionText}"
                         FontSize="14"
                         Foreground="#AAA"/>
            </Border>
            
            <!-- Video indicator -->
            <Border Background="#FF6B00"
                    CornerRadius="4"
                    Padding="8,4"
                    IsVisible="{Binding IsVideo}">
              <TextBlock Text="VIDEO"
                         FontSize="12"
                         FontWeight="Bold"
                         Foreground="White"/>
            </Border>
          </StackPanel>
          
          <!-- Spacer -->
          <Border Grid.Column="1"/>
          
          <!-- Rating status indicator -->
          <Border Grid.Column="2"
                  Background="{Binding IsApproved, Converter={x:Static converters:BoolConverters.BoolToApprovedBackground}}"
                  CornerRadius="4"
                  Padding="12,6"
                  Margin="0,0,8,0"
                  IsVisible="{Binding IsApproved}">
            <TextBlock Text="Ready"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="White"/>
          </Border>
          
          <Border Grid.Column="2"
                  Background="#D9534F"
                  CornerRadius="4"
                  Padding="12,6"
                  Margin="0,0,8,0"
                  IsVisible="{Binding IsRejected}">
            <TextBlock Text="Trash"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="White"/>
          </Border>
          
          <!-- Keyboard shortcuts hint -->
          <TextBlock Grid.Column="3"
                     Text="Arrow keys: Navigate  |  Esc: Close"
                     FontSize="11"
                     Foreground="#666"
                     VerticalAlignment="Center"
                     Margin="0,0,16,0"/>
          
          <!-- Close button -->
          <Button Grid.Column="4"
                  Content="X"
                  Command="{Binding CloseCommand}"
                  FontSize="16"
                  FontWeight="Bold"
                  Padding="12,6"
                  Background="#80444444"
                  Foreground="White"
                  CornerRadius="4"
                  ToolTip.Tip="Close (Escape)"/>
        </Grid>
      </Border>
      
      <!-- Image display area with navigation -->
      <Grid Grid.Row="1">
        
        <!-- Previous button (left side) -->
        <Button Content="&lt;"
                Command="{Binding PreviousCommand}"
                FontSize="32"
                FontWeight="Bold"
                Padding="20,40"
                Background="#80000000"
                Foreground="White"
                CornerRadius="0,8,8,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                IsVisible="{Binding CanGoPrevious}"
                ToolTip.Tip="Previous (Left Arrow)"
                ZIndex="10"/>
        
        <!-- Next button (right side) -->
        <Button Content="&gt;"
                Command="{Binding NextCommand}"
                FontSize="32"
                FontWeight="Bold"
                Padding="20,40"
                Background="#80000000"
                Foreground="White"
                CornerRadius="8,0,0,8"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                IsVisible="{Binding CanGoNext}"
                ToolTip.Tip="Next (Right Arrow)"
                ZIndex="10"/>
        
        <!-- Centered image - load full resolution for viewer -->
        <Image x:Name="ViewerImage"
               Source="{Binding ImagePath, Converter={StaticResource PathToBitmapConverter}, ConverterParameter=full}"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="80,20"
               IsVisible="{Binding !IsVideo}"/>
        
        <!-- Video thumbnail with overlay -->
        <Grid IsVisible="{Binding IsVideo}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
          <!-- Video thumbnail -->
          <Image Source="{Binding CurrentImage.ThumbnailPath, Converter={StaticResource PathToBitmapConverter}}"
                 Stretch="Uniform"
                 Margin="80,20"
                 Opacity="0.5"/>
          
          <!-- Video playback message overlay -->
          <Border Background="#80000000"
                  CornerRadius="8"
                  Padding="24,16"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
            <StackPanel Spacing="8" HorizontalAlignment="Center">
              <Border Background="#FF6B00" CornerRadius="8" Padding="16,8">
                <TextBlock Text="VIDEO"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
              </Border>
              <TextBlock Text="Video Preview"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="White"
                         HorizontalAlignment="Center"/>
              <TextBlock Text="Video playback is not supported in the viewer."
                         FontSize="13"
                         Foreground="#AAA"
                         HorizontalAlignment="Center"/>
            </StackPanel>
          </Border>
        </Grid>
        
        <!-- Keyboard shortcuts help overlay -->
        <Border Background="#99000000"
                CornerRadius="8"
                Padding="12,8"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,16,16"
                Opacity="0.8">
          <StackPanel Orientation="Horizontal" Spacing="12">
            <Image Source="avares://DiffusionNexus.UI/Assets/arrow-keys.png"
                   Width="128"
                   Height="128"
                   VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Center" Spacing="2">
              <TextBlock Text="Use arrow keys:"
                         FontSize="11"
                         FontWeight="SemiBold"
                         Foreground="White"/>
              <TextBlock Text="Up/Down - Rate image"
                         FontSize="10"
                         Foreground="#CCC"/>
              <TextBlock Text="Left/Right - Navigate dataset"
                         FontSize="10"
                         Foreground="#CCC"/>
            </StackPanel>
          </StackPanel>
        </Border>
        
      </Grid>
      
      <!-- Bottom toolbar with actions and caption editor -->
      <Border Grid.Row="2"
              Background="#CC1A1A1A"
              Padding="16,12">
        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
          
          <!-- Caption editor (editable) -->
          <Grid Grid.Row="0" Grid.ColumnSpan="2"
                ColumnDefinitions="*,Auto"
                Margin="0,0,0,12"
                IsVisible="{Binding HasCurrentImage}">
            
            <!-- Caption TextBox -->
            <Border Grid.Column="0"
                    Background="#80333333"
                    CornerRadius="6"
                    Padding="4">
              <TextBox x:Name="CaptionTextBox"
                       Text="{Binding CurrentImage.Caption, Mode=TwoWay}"
                       AcceptsReturn="True"
                       TextWrapping="Wrap"
                       MinHeight="60"
                       MaxHeight="100"
                       FontSize="13"
                       Foreground="#CCC"
                       Background="Transparent"
                       BorderThickness="0"
                       Watermark="Enter caption..."/>
            </Border>
            
            <!-- Save/Revert buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Vertical" 
                        Spacing="4"
                        Margin="8,0,0,0"
                        VerticalAlignment="Top">
              
              <!-- Unsaved indicator + Save button -->
              <Button Command="{Binding CurrentImage.SaveCaptionCommand}"
                      Padding="12,8"
                      FontSize="13"
                      Background="{Binding CurrentImage.HasUnsavedChanges, Converter={x:Static converters:BoolConverters.BoolToUnsavedBackground}}"
                      Foreground="White"
                      CornerRadius="4"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      ToolTip.Placement="Left"
                      ToolTip.Tip="Save caption (Ctrl+S)">
                <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center">
                  <TextBlock Text="*" 
                             FontWeight="Bold" 
                             Foreground="#FFD700"
                             IsVisible="{Binding CurrentImage.HasUnsavedChanges}"/>
                  <TextBlock Text="Save"/>
                </StackPanel>
              </Button>
              
              <!-- Revert button -->
              <Button Content="Reset"
                      Command="{Binding CurrentImage.RevertCaptionCommand}"
                      Padding="12,8"
                      FontSize="13"
                      Background="#80444444"
                      Foreground="White"
                      CornerRadius="4"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      IsVisible="{Binding CurrentImage.HasUnsavedChanges}"
                      ToolTip.Placement="Left"
                      ToolTip.Tip="Reset changes"/>
                      
              <!-- Undo button -->
              <Button Content="Undo"
                      Command="{Binding CurrentImage.UndoCaptionCommand}"
                      Padding="12,8"
                      FontSize="13"
                      Background="#80444444"
                      Foreground="White"
                      CornerRadius="4"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      IsVisible="{Binding CurrentImage.HasUnsavedChanges}"
                      ToolTip.Placement="Left"
                      ToolTip.Tip="Undo changes"/>
                      
              <!-- Redo button -->
              <Button Content="Redo"
                      Command="{Binding CurrentImage.RedoCaptionCommand}"
                      Padding="12,8"
                      FontSize="13"
                      Background="#80444444"
                      Foreground="White"
                      CornerRadius="4"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      IsVisible="{Binding CurrentImage.HasUnsavedChanges}"
                      ToolTip.Placement="Left"
                      ToolTip.Tip="Redo changes"/>
            </StackPanel>
          </Grid>
          
          <!-- Left side: Rating buttons -->
          <StackPanel Grid.Row="1" Grid.Column="0" 
                      Orientation="Horizontal" 
                      Spacing="8">
            
            <TextBlock Text="Rating:"
                       Foreground="#888"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
            
            <Button Command="{Binding MarkApprovedCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Background="{Binding IsApproved, Converter={x:Static converters:BoolConverters.BoolToApprovedButtonBackground}}"
                    Foreground="{Binding IsApproved, Converter={x:Static converters:BoolConverters.BoolToApprovedButtonForeground}}"
                    CornerRadius="4"
                    ToolTip.Placement="Top"
                    ToolTip.VerticalOffset="-8"
                    ToolTip.Tip="W or Up Arrow">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="+" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="Mark Ready" VerticalAlignment="Center"/>
              </StackPanel>
            </Button>
            
            <Button Command="{Binding MarkRejectedCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Background="{Binding IsRejected, Converter={x:Static converters:BoolConverters.BoolToRejectedButtonBackground}}"
                    Foreground="{Binding IsRejected, Converter={x:Static converters:BoolConverters.BoolToRejectedButtonForeground}}"
                    CornerRadius="4"
                    ToolTip.Placement="Top"
                    ToolTip.VerticalOffset="-8"
                    ToolTip.Tip="S or Down Arrow">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="-" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="Mark Trash" VerticalAlignment="Center"/>
              </StackPanel>
            </Button>
            
            <Button Content="Clear Rating"
                    Command="{Binding ClearRatingCommand}"
                    Padding="12,10"
                    FontSize="13"
                    Background="#80444444"
                    Foreground="White"
                    CornerRadius="4"
                    ToolTip.Placement="Top"
                    ToolTip.VerticalOffset="-8"
                    ToolTip.Tip="C"/>
          </StackPanel>
          
          <!-- Right side: Action buttons -->
          <StackPanel Grid.Row="1" Grid.Column="1" 
                      Orientation="Horizontal" 
                      Spacing="8">
            
            <Button Content="Send to Editor"
                    Command="{Binding SendToImageEditorCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Background="#2D7D46"
                    Foreground="White"
                    CornerRadius="4"
                    IsVisible="{Binding IsImage}"
                    ToolTip.Placement="Top"
                    ToolTip.VerticalOffset="-8"
                    ToolTip.Tip="E"/>
            
            <Button Command="{Binding DeleteCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Background="#B22222"
                    Foreground="White"
                    CornerRadius="4"
                    ToolTip.Placement="Top"
                    ToolTip.VerticalOffset="-8"
                    ToolTip.Tip="Delete key">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="X" FontWeight="Bold" Foreground="#FF6B6B" VerticalAlignment="Center"/>
                <TextBlock Text="Delete" VerticalAlignment="Center"/>
              </StackPanel>
            </Button>
          </StackPanel>
          
        </Grid>
      </Border>
      
    </Grid>
    
  </Grid>
</Window>
