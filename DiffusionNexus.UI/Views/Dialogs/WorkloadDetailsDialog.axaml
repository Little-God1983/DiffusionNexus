<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:DiffusionNexus.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
        x:Class="DiffusionNexus.UI.Views.Dialogs.WorkloadDetailsDialog"
        Title="Workload Details"
        Width="850" Height="550"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="Button.close-btn">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.close-btn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#444444"/>
        </Style>
        <Style Selector="Button.install-btn">
            <Setter Property="Background" Value="#0088CC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.install-btn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#009AE0"/>
        </Style>
        <Style Selector="Button.install-btn:disabled /template/ ContentPresenter">
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="Foreground" Value="#888888"/>
        </Style>
    </Window.Styles>

    <Grid Margin="16" RowDefinitions="Auto,Auto,*,Auto,Auto">
        <TextBlock Grid.Row="0" x:Name="TitleText" Text="Workload Details" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
        <TextBlock Grid.Row="1" x:Name="SummaryText" FontSize="13" Foreground="#BBBBBB" Margin="0,0,0,8"/>

        <DataGrid Grid.Row="2"
                  x:Name="DetailsGrid"
                  x:DataType="vm:WorkloadDetailItemViewModel"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserReorderColumns="False"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  Background="#1E1E1E"
                  Foreground="White"
                  BorderThickness="0">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="40">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="vm:WorkloadDetailItemViewModel">
                            <CheckBox IsChecked="{Binding IsSelected}"
                                      IsVisible="{Binding IsMissing}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding ItemName}" Width="2*" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Status" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="vm:WorkloadDetailItemViewModel">
                            <TextBlock Text="{Binding StatusText}"
                                       Foreground="{Binding StatusColor}"
                                       VerticalAlignment="Center"
                                       Margin="4,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="3*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Installation progress panel (hidden until install starts) -->
        <Border Grid.Row="3"
                x:Name="ProgressPanel"
                IsVisible="False"
                Background="#252525"
                CornerRadius="6"
                Padding="12,8"
                Margin="0,8,0,0"
                MaxHeight="200">
            <Grid RowDefinitions="Auto,Auto,*">
                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,6">
                    <TextBlock x:Name="ProgressStatusText"
                               Text="Installing..."
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#0088CC"/>
                </StackPanel>

                <!-- Download progress bar (visible only during model downloads) -->
                <Border Grid.Row="1"
                        x:Name="DownloadProgressPanel"
                        IsVisible="False"
                        Background="#1A2A3A"
                        CornerRadius="4"
                        Padding="10,8"
                        Margin="0,0,0,6">
                    <StackPanel Spacing="6">
                        <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                            <TextBlock Grid.Column="0"
                                       x:Name="DownloadFileNameText"
                                       FontSize="12"
                                       Foreground="#88AAFF"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="DownloadSizeText"
                                       FontSize="12"
                                       Foreground="#AAAACC"
                                       Margin="12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2"
                                       x:Name="DownloadSpeedText"
                                       FontSize="12"
                                       Foreground="#88FF88"
                                       FontWeight="SemiBold"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="3"
                                    x:Name="SkipDownloadButton"
                                    Content="â­ Skip"
                                    Click="OnSkipDownload"
                                    Background="#AA6644"
                                    Foreground="White"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Padding="12,6"
                                    CornerRadius="4"
                                    Cursor="Hand"
                                    ToolTip.Tip="Skip this model and continue with the next one"
                                    VerticalAlignment="Center"/>
                        </Grid>
                        <ProgressBar x:Name="DownloadProgressBar"
                                     Height="10"
                                     CornerRadius="5"
                                     Background="#2A3A4A"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="0">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                                    <GradientStop Color="#667EEA" Offset="0"/>
                                    <GradientStop Color="#764BA2" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </StackPanel>
                </Border>

                <ScrollViewer Grid.Row="2" x:Name="ProgressLogScroller" MaxHeight="80">
                    <ItemsControl x:Name="ProgressLogList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           FontSize="12"
                                           FontFamily="Consolas, Courier New, monospace"
                                           Foreground="#CCCCCC"
                                           TextWrapping="NoWrap"
                                           Margin="0,1"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
            <Button x:Name="InstallButton"
                    Classes="install-btn"
                    Content="Install Selected"
                    Click="OnInstall"/>
            <Button x:Name="CloseButton"
                    Classes="close-btn"
                    Content="Close"
                    Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>
