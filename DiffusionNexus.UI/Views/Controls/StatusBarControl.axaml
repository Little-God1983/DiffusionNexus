<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DiffusionNexus.UI.ViewModels"
             xmlns:controls="using:DiffusionNexus.UI.Views.Controls"
             x:Class="DiffusionNexus.UI.Views.Controls.StatusBarControl"
             x:DataType="vm:StatusBarViewModel">

    <UserControl.Styles>
        <!-- Custom progress bar styling for status bar -->
        <Style Selector="ProgressBar.status-progress">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#00000033"/>
        </Style>
        <!-- Backup progress bar - more prominent -->
        <Style Selector="ProgressBar.backup-progress">
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Background" Value="#1E7E34"/>
        </Style>
        <!-- Spinning animation for backup indicator -->
        <Style Selector="TextBlock.spinning">
            <Setter Property="RenderTransformOrigin" Value="50%,50%"/>
            <Setter Property="RenderTransform">
                <RotateTransform/>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="INFINITE">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,Auto">
        
        <!-- Expandable Log Panel -->
        <Border Grid.Row="0"
                Height="250"
                IsVisible="{Binding IsLogPanelOpen}">
            <controls:ActivityLogPanel DataContext="{Binding LogViewModel}"/>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="1" 
                Background="{Binding StatusBackground}"
                Height="24">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                
                <!-- Status Message (hidden when backup in progress) -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            Spacing="8"
                            Margin="8,0"
                            IsVisible="{Binding !ShowBackupProgress}">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="{Binding StatusForeground}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                
                <!-- Backup Progress Bar (shown when backup in progress) -->
                <Grid Grid.Column="0"
                      Margin="8,0"
                      IsVisible="{Binding ShowBackupProgress}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Spinning hourglass animation -->
                    <TextBlock Grid.Column="0"
                               Text="?"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Foreground="{Binding StatusForeground}"
                               Margin="0,0,8,0"
                               Classes="spinning"/>
                    
                    <!-- Backup operation name -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding BackupOperationName, FallbackValue='Backup running...'}"
                               Foreground="{Binding StatusForeground}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    
                    <!-- Progress bar that fills available space -->
                    <ProgressBar Grid.Column="2"
                                 Value="{Binding BackupProgressPercent}"
                                 Minimum="0"
                                 Maximum="100"
                                 Height="8"
                                 VerticalAlignment="Center"
                                 Classes="backup-progress"/>
                    
                    <!-- Percentage text -->
                    <TextBlock Grid.Column="3"
                               Text="{Binding BackupProgressPercent, StringFormat='{}{0}%'}"
                               Foreground="{Binding StatusForeground}"
                               FontSize="12"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </Grid>
                
                <!-- Active Operation Progress (when not backup) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="0,0,16,0"
                            IsVisible="{Binding HasActiveOperation}">
                    <TextBlock Text="{Binding ActiveOperationName}"
                               Foreground="{Binding StatusForeground}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Opacity="0.9"/>
                    <ProgressBar Value="{Binding ActiveOperationProgress, TargetNullValue=0, FallbackValue=0}"
                                 Minimum="0"
                                 Maximum="100"
                                 Width="100"
                                 Height="6"
                                 VerticalAlignment="Center"
                                 Classes="status-progress"
                                 IsIndeterminate="{Binding ActiveOperationProgress, Converter={x:Static ObjectConverters.IsNull}}"/>
                    <TextBlock Text="{Binding ActiveOperationProgress, StringFormat='{}{0}%'}"
                               Foreground="{Binding StatusForeground}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               IsVisible="{Binding ActiveOperationProgress, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                </StackPanel>
                
                <!-- Warning/Error Counts -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="0,0,8,0"
                            IsVisible="{Binding HasWarningsOrErrors}">
                    <Button Padding="4,2"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding ShowLogPanelCommand}"
                            IsVisible="{Binding WarningCount}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="?" FontSize="12" Foreground="#000000"/>
                            <TextBlock Text="{Binding WarningCount}" 
                                       FontSize="11" 
                                       Foreground="#000000"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Padding="4,2"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding ShowLogPanelCommand}"
                            IsVisible="{Binding ErrorCount}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="?" FontSize="12" Foreground="#FFFFFF" FontWeight="Bold"/>
                            <TextBlock Text="{Binding ErrorCount}" 
                                       FontSize="11" 
                                       Foreground="#FFFFFF"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- Toggle Log Panel Button -->
                <Button Grid.Column="4"
                        Command="{Binding ToggleLogPanelCommand}"
                        Padding="8,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{Binding StatusForeground}"
                        FontSize="10"
                        VerticalContentAlignment="Center"
                        Cursor="Hand"
                        ToolTip.Tip="Toggle Activity Log">
                    <Panel>
                        <TextBlock Text="?" IsVisible="{Binding IsLogPanelOpen}"/>
                        <TextBlock Text="?" IsVisible="{Binding !IsLogPanelOpen}"/>
                    </Panel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
