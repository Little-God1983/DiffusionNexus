<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="using:DiffusionNexus.UI.Converters"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="500"
             x:Class="DiffusionNexus.UI.Views.Controls.ImageCompareControl">

  <Grid Background="#121212" ClipToBounds="True">
    <Image x:Name="BeforeImage"
           Source="{Binding BeforeImage, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={x:Static converters:PathToBitmapConverter.Instance}, ConverterParameter=full}"
           Stretch="{Binding FitMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={x:Static converters:CompareFitModeToStretchConverter.Instance}}"
           StretchDirection="Both"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>

    <Image x:Name="AfterImage"
           Source="{Binding AfterImage, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={x:Static converters:PathToBitmapConverter.Instance}, ConverterParameter=full}"
           Stretch="{Binding FitMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={x:Static converters:CompareFitModeToStretchConverter.Instance}}"
           StretchDirection="Both"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>

    <Canvas x:Name="OverlayCanvas"
            Background="Transparent"
            IsHitTestVisible="True">
      <Border x:Name="SliderLine"
              Width="2"
              Background="#CCFFFFFF"/>
      <Thumb x:Name="SliderThumb"
             Width="28"
             Height="28"
             Background="#1D1D1D"
             BorderBrush="#CCFFFFFF"
             BorderThickness="1"
             CornerRadius="14"
             Cursor="SizeWestEast">
        <TextBlock Text="â‡„"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#CCFFFFFF"/>
      </Thumb>
    </Canvas>
  </Grid>
</UserControl>
