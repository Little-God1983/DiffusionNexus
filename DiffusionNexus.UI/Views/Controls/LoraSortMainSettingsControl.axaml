<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DiffusionNexus.UI.ViewModels"
             xmlns:controls="using:DiffusionNexus.UI.Views.Controls"
             mc:Ignorable="d"
             x:Class="DiffusionNexus.UI.Views.Controls.LoraSortMainSettingsControl"
             x:DataType="vm:LoraSortMainSettingsViewModel">
    <UserControl.DataContext>
        <vm:LoraSortMainSettingsViewModel/>
    </UserControl.DataContext>
    <Grid>
      <ScrollViewer Margin="10" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- LoRA Source Path Group -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Your LoRA Source Path (e.g.:&quot;D:\stable-diffusion-webui\models\Lora&quot;):"
                              Margin="0,0,0,5"/>
                    <Button Name="BasePath" 
                           Content="Select LoRA Path..."
                           Command="{Binding SelectBasePathCommand}"/>
                    <TextBox Name="BasePathText" 
                            IsReadOnly="True" 
                            Margin="0,5"
                            Text="{Binding BasePath}"/>
                </StackPanel>
            </Border>
            
            <!-- Operation Type Group -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Operation Type:" 
                              FontWeight="Bold" 
                              FontSize="14"
                              Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Name="CopyRadio" 
                                   Content="Copy Files (Keeps originals)" 
                                   IsChecked="{Binding IsCopyMode}"
                                   FontSize="16"/>
                        <RadioButton Name="MoveRadio" 
                                   Content="Move Files" 
                                   IsChecked="{Binding !IsCopyMode}"
                                   FontSize="16" 
                                   Margin="20,0,0,0"/>
                        <CheckBox Name="OverrideCheck" 
                                 Content="Override Files with same name" 
                                 IsChecked="{Binding OverrideFiles}"
                                 FontSize="16" 
                                 Margin="20,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Name="BaseFoldersCheck" 
                                 Content="Create Base Model Folder" 
                                 IsChecked="{Binding CreateBaseFolders}"
                                 FontSize="16" 
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Special:" 
                              FontWeight="Bold" 
                              FontSize="14"
                              Margin="0,10,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Name="CustomCheck" 
                                 Content="Use Custom Mappings" 
                                 IsChecked="{Binding UseCustomMappings}"
                                 FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- LoRA Target Path Group -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                <StackPanel>
                    <TextBlock Text="LoRA Target Path:"
                              Margin="0,0,0,5"/>
                    <Button Name="TargetPath" 
                           Content="Select Target Path..."
                           Command="{Binding SelectTargetPathCommand}"/>
                    <TextBox Name="TargetPathText" 
                            IsReadOnly="True" 
                            Margin="0,5"
                            Text="{Binding TargetPath}"/>
                </StackPanel>
            </Border>
            
            <!-- Action Group -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                <StackPanel>
                    <Button Name="GoButton" 
                           Content="{Binding ActionButtonText}" 
                           Command="{Binding GoCommand}"
                           Margin="0,10"/>
                </StackPanel>
            </Border>
        </StackPanel>
      </ScrollViewer>
      <controls:ProcessingOverlayControl IsVisible="{Binding IsBusy}"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>