<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:DiffusionNexus.UI.Views.Controls"
             xmlns:vm="using:DiffusionNexus.UI.ViewModels"
             xmlns:vmTabs="using:DiffusionNexus.UI.ViewModels.Tabs"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="DiffusionNexus.UI.Views.Tabs.ImageCompareTabView"
             x:DataType="vmTabs:ImageCompareTabViewModel">

  <Design.DataContext>
    <vmTabs:ImageCompareTabViewModel/>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    
    <!-- Toolbar -->
    <Border Grid.Row="0" 
            Background="#1E1E1E" 
            Padding="16,12"
            BorderBrush="#333"
            BorderThickness="0,0,0,1">
      <Grid ColumnDefinitions="Auto,Auto,*,Auto">
        
        <!-- Title -->
        <TextBlock Grid.Column="0"
                   Text="Image Compare"
                   FontSize="18"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"/>
        
        <!-- Instructions -->
        <TextBlock Grid.Column="1"
                   Text="Drag and drop two images to compare them"
                   FontSize="13"
                   Opacity="0.6"
                   Margin="20,0,0,0"
                   VerticalAlignment="Center"/>
        
        <!-- Spacer -->
        <Border Grid.Column="2"/>
        
        <!-- Actions -->
        <StackPanel Grid.Column="3" 
                    Orientation="Horizontal" 
                    Spacing="8"
                    VerticalAlignment="Center">
          <Button Content="Reset Slider"
                  Command="{Binding ResetSliderCommand}"
                  Padding="12,6"
                  Background="#444"
                  ToolTip.Tip="Reset slider to center position"/>
          <Button Content="Clear Images"
                  Command="{Binding ClearImagesCommand}"
                  Padding="12,6"
                  Background="#B22222"
                  Foreground="White"
                  ToolTip.Tip="Clear both images"/>
        </StackPanel>
      </Grid>
    </Border>
    
    <!-- Image Comparer Control -->
    <controls:ImageComparerView Grid.Row="1"
                                DataContext="{Binding Comparer}"
                                Margin="16"/>
    
  </Grid>
</UserControl>