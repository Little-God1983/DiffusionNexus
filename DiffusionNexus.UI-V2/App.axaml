<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:DiffusionNexus.UI"
             x:Class="DiffusionNexus.UI.App"
             RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        
        <!-- Global font with emoji fallback -->
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="Inter, Segoe UI Emoji, Apple Color Emoji, Noto Color Emoji, sans-serif"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="FontFamily" Value="Inter, Segoe UI Emoji, Apple Color Emoji, Noto Color Emoji, sans-serif"/>
        </Style>
    </Application.Styles>
</Application>
