<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DiffusionNexus.UI.ViewModels"
        xmlns:converters="using:DiffusionNexus.UI.Converters"
        x:Class="DiffusionNexus.UI.Views.Dialogs.ImageViewerDialog"
        x:DataType="vm:ImageViewerViewModel"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="Full"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Background="#000000">

  <Window.Resources>
    <converters:PathToBitmapConverter x:Key="PathToBitmapConverter"/>
  </Window.Resources>

  <Design.DataContext>
    <vm:ImageViewerViewModel/>
  </Design.DataContext>

  <!-- Full-screen overlay with image viewer -->
  <Grid>
    
    <!-- Dark background that can be clicked to close -->
    <Border Background="#000000" 
            PointerPressed="OnBackgroundPressed"/>
    
    <!-- Main content area -->
    <Grid RowDefinitions="Auto,*,Auto" Margin="0">
      
      <!-- Top toolbar with filename and close button -->
      <Border Grid.Row="0"
              Background="#CC1A1A1A"
              Padding="16,12">
        <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto">
          
          <!-- Filename and position -->
          <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
            <TextBlock Text="{Binding FileName}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            <Border Background="#444"
                    CornerRadius="4"
                    Padding="8,4">
              <TextBlock Text="{Binding PositionText}"
                         FontSize="14"
                         Foreground="#AAA"/>
            </Border>
            
            <!-- Video indicator -->
            <Border Background="#FF6B00"
                    CornerRadius="4"
                    Padding="8,4"
                    IsVisible="{Binding IsVideo}">
              <TextBlock Text="&#x1F3AC; Video"
                         FontSize="12"
                         Foreground="White"/>
            </Border>
          </StackPanel>
          
          <!-- Spacer -->
          <Border Grid.Column="1"/>
          
          <!-- Rating status indicator -->
          <Border Grid.Column="2"
                  Background="{Binding IsApproved, Converter={x:Static converters:BoolConverters.BoolToApprovedBackground}}"
                  CornerRadius="4"
                  Padding="12,6"
                  Margin="0,0,8,0"
                  IsVisible="{Binding IsApproved}">
            <TextBlock Text="&#x2713; Production Ready"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="White"/>
          </Border>
          
          <Border Grid.Column="2"
                  Background="#D9534F"
                  CornerRadius="4"
                  Padding="12,6"
                  Margin="0,0,8,0"
                  IsVisible="{Binding IsRejected}">
            <TextBlock Text="&#x2717; Failed"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="White"/>
          </Border>
          
          <!-- Keyboard shortcuts hint -->
          <TextBlock Grid.Column="3"
                     Text="&#x2190; &#x2192; Navigate  |  Esc Close"
                     FontSize="11"
                     Foreground="#666"
                     VerticalAlignment="Center"
                     Margin="0,0,16,0"/>
          
          <!-- Close button -->
          <Button Grid.Column="4"
                  Content="&#x2715;"
                  Command="{Binding CloseCommand}"
                  FontSize="18"
                  Padding="12,6"
                  Background="#80444444"
                  Foreground="White"
                  CornerRadius="4"
                  ToolTip.Tip="Close (Escape)"/>
        </Grid>
      </Border>
      
      <!-- Image display area with navigation -->
      <Grid Grid.Row="1">
        
        <!-- Previous button (left side) -->
        <Button Content="&#x276E;"
                Command="{Binding PreviousCommand}"
                FontSize="32"
                Padding="20,40"
                Background="#80000000"
                Foreground="White"
                CornerRadius="0,8,8,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                IsVisible="{Binding CanGoPrevious}"
                ToolTip.Tip="Previous (Left Arrow)"
                ZIndex="10"/>
        
        <!-- Next button (right side) -->
        <Button Content="&#x276F;"
                Command="{Binding NextCommand}"
                FontSize="32"
                Padding="20,40"
                Background="#80000000"
                Foreground="White"
                CornerRadius="8,0,0,8"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                IsVisible="{Binding CanGoNext}"
                ToolTip.Tip="Next (Right Arrow)"
                ZIndex="10"/>
        
        <!-- Centered image -->
        <Image x:Name="ViewerImage"
               Source="{Binding ImagePath, Converter={StaticResource PathToBitmapConverter}}"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="80,20"
               IsVisible="{Binding !IsVideo}"/>
        
        <!-- Video thumbnail with overlay -->
        <Grid IsVisible="{Binding IsVideo}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
          <!-- Video thumbnail -->
          <Image Source="{Binding CurrentImage.ThumbnailPath, Converter={StaticResource PathToBitmapConverter}}"
                 Stretch="Uniform"
                 Margin="80,20"
                 Opacity="0.5"/>
          
          <!-- Video playback message overlay -->
          <Border Background="#80000000"
                  CornerRadius="8"
                  Padding="24,16"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
            <StackPanel Spacing="8" HorizontalAlignment="Center">
              <TextBlock Text="&#x1F3AC;"
                         FontSize="48"
                         HorizontalAlignment="Center"/>
              <TextBlock Text="Video Preview"
                         FontSize="18"
                         FontWeight="SemiBold"
                         Foreground="White"
                         HorizontalAlignment="Center"/>
              <TextBlock Text="Video playback is not supported in the viewer."
                         FontSize="13"
                         Foreground="#AAA"
                         HorizontalAlignment="Center"/>
            </StackPanel>
          </Border>
        </Grid>
        
      </Grid>
      
      <!-- Bottom toolbar with actions and caption preview -->
      <Border Grid.Row="2"
              Background="#CC1A1A1A"
              Padding="16,12">
        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
          
          <!-- Caption preview (if available) -->
          <Border Grid.Row="0" Grid.ColumnSpan="2"
                  Background="#80333333"
                  CornerRadius="6"
                  Padding="12,8"
                  Margin="0,0,0,12"
                  IsVisible="{Binding HasCaption}"
                  MaxHeight="80">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
              <TextBlock Text="{Binding Caption}"
                         TextWrapping="Wrap"
                         FontSize="13"
                         Foreground="#CCC"
                         MaxLines="3"/>
            </ScrollViewer>
          </Border>
          
          <!-- No caption indicator -->
          <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                     Text="No caption"
                     FontSize="12"
                     Foreground="#666"
                     FontStyle="Italic"
                     Margin="0,0,0,12"
                     IsVisible="{Binding !HasCaption}"/>
          
          <!-- Left side: Rating buttons -->
          <StackPanel Grid.Row="1" Grid.Column="0" 
                      Orientation="Horizontal" 
                      Spacing="8">
            
            <TextBlock Text="Rating:"
                       Foreground="#888"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
            
            <Button Content="&#x25B2; Mark Ready"
                    Command="{Binding MarkApprovedCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Background="{Binding IsApproved, Converter={x:Static converters:BoolConverters.BoolToApprovedButtonBackground}}"
                    Foreground="{Binding IsApproved, Converter={x:Static converters:BoolConverters.BoolToApprovedButtonForeground}}"
                    CornerRadius="4"
                    ToolTip.Tip="Mark as production-ready (W or Up Arrow)"/>
            
            <Button Content="&#x25BC; Mark Failed"
                    Command="{Binding MarkRejectedCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Background="{Binding IsRejected, Converter={x:Static converters:BoolConverters.BoolToRejectedButtonBackground}}"
                    Foreground="{Binding IsRejected, Converter={x:Static converters:BoolConverters.BoolToRejectedButtonForeground}}"
                    CornerRadius="4"
                    ToolTip.Tip="Mark as failed/rejected (S or Down Arrow)"/>
            
            <Button Content="Clear Rating"
                    Command="{Binding ClearRatingCommand}"
                    Padding="12,10"
                    FontSize="13"
                    Background="#80444444"
                    Foreground="White"
                    CornerRadius="4"
                    ToolTip.Tip="Clear rating"/>
          </StackPanel>
          
          <!-- Right side: Action buttons -->
          <StackPanel Grid.Row="1" Grid.Column="1" 
                      Orientation="Horizontal" 
                      Spacing="8">
            
            <Button Content="&#x1F5BC; Send to Editor"
                    Command="{Binding SendToImageEditorCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Background="#2D7D46"
                    Foreground="White"
                    CornerRadius="4"
                    IsVisible="{Binding IsImage}"
                    ToolTip.Tip="Open in Image Editor (E)"/>
            
            <Button Content="&#x1F5D1; Delete"
                    Command="{Binding DeleteCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Background="#B22222"
                    Foreground="White"
                    CornerRadius="4"
                    ToolTip.Tip="Delete this item (Delete)"/>
          </StackPanel>
          
        </Grid>
      </Border>
      
    </Grid>
    
  </Grid>
</Window>
