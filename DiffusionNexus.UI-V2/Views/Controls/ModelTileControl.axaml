<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DiffusionNexus.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="340"
             x:Class="DiffusionNexus.UI.Views.Controls.ModelTileControl"
             x:DataType="vm:ModelTileViewModel">

  <Design.DataContext>
    <vm:ModelTileViewModel/>
  </Design.DataContext>

  <Border Background="#2D2D2D"
          CornerRadius="8"
          BorderBrush="#3D3D3D"
          BorderThickness="1"
          ClipToBounds="True"
          Cursor="Hand">

    <Grid RowDefinitions="Auto,*,Auto,Auto">
      
      <!-- Version Selector Buttons (always shown) -->
      <Border Grid.Row="0" Margin="8,8,8,0">
        <ItemsControl ItemsSource="{Binding VersionButtons}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:VersionButtonViewModel">
              <ToggleButton Content="{Binding Label}"
                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                            Command="{Binding SelectCommand}"
                            ToolTip.Tip="{Binding ToolTip}"
                            Margin="0,0,4,4"
                            Padding="6,3"
                            FontSize="10"
                            MinWidth="40"/>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Border>

      <!-- Thumbnail Area -->
      <Border Grid.Row="1"
              Height="160"
              Margin="8,2,8,0"
              Background="#1A1A1A"
              CornerRadius="4"
              ClipToBounds="True">
        
        <Grid>
          <!-- Actual Image -->
          <Image Source="{Binding ThumbnailImage}"
                 Stretch="UniformToFill"
                 IsVisible="{Binding HasThumbnail}"/>
          
          <!-- Placeholder -->
          <Border IsVisible="{Binding ShowPlaceholder}"
                  Background="#252525">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
              <TextBlock Text="??" FontSize="40" HorizontalAlignment="Center" Opacity="0.3"/>
              <TextBlock Text="No Preview" FontSize="11" Opacity="0.3" HorizontalAlignment="Center"/>
            </StackPanel>
          </Border>

          <!-- Loading Indicator -->
          <Border IsVisible="{Binding IsLoading}"
                  Background="#80000000">
            <ProgressBar IsIndeterminate="True" Width="80" VerticalAlignment="Center"/>
          </Border>

          <!-- NSFW Badge -->
          <Border IsVisible="{Binding IsNsfw}"
                  Background="#E53935"
                  CornerRadius="4"
                  Padding="6,2"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Margin="4">
            <TextBlock Text="NSFW" FontSize="9" FontWeight="Bold" Foreground="White"/>
          </Border>
        </Grid>
      </Border>

      <!-- Model Info: Name + Filename -->
      <StackPanel Grid.Row="2" Margin="8,6,8,0" Spacing="2">
        
        <!-- Model Name (Bold) -->
        <TextBlock Text="{Binding DisplayName}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   TextTrimming="CharacterEllipsis"
                   ToolTip.Tip="{Binding DisplayName}"/>

        <!-- Filename (Smaller, dimmed) -->
        <TextBlock Text="{Binding FileName}"
                   FontSize="11"
                   Opacity="0.6"
                   TextTrimming="CharacterEllipsis"
                   ToolTip.Tip="{Binding FileName}"/>

      </StackPanel>

      <!-- Bottom Action Buttons -->
      <Border Grid.Row="3"
              Background="#252525"
              Padding="8,6"
              Margin="0,6,0,0"
              CornerRadius="0,0,8,8">
        
        <Grid ColumnDefinitions="*,*,*,*">
          
          <!-- Open on Civitai -->
          <Button Grid.Column="0"
                  Content="??"
                  Command="{Binding OpenOnCivitaiCommand}"
                  ToolTip.Tip="Open on Civitai"
                  HorizontalAlignment="Center"
                  Padding="8,4"
                  FontSize="14"/>
          
          <!-- Copy Trigger Words -->
          <Button Grid.Column="1"
                  Content="??"
                  Command="{Binding CopyTriggerWordsCommand}"
                  ToolTip.Tip="Copy Trigger Words"
                  HorizontalAlignment="Center"
                  Padding="8,4"
                  FontSize="14"/>
          
          <!-- Open Folder -->
          <Button Grid.Column="2"
                  Content="??"
                  Command="{Binding OpenFolderCommand}"
                  ToolTip.Tip="Open Folder"
                  HorizontalAlignment="Center"
                  Padding="8,4"
                  FontSize="14"/>
          
          <!-- Delete -->
          <Button Grid.Column="3"
                  Content="?"
                  Command="{Binding DeleteCommand}"
                  ToolTip.Tip="Delete Model"
                  HorizontalAlignment="Center"
                  Padding="8,4"
                  FontSize="14"/>
          
        </Grid>
      </Border>

    </Grid>

  </Border>
</UserControl>
